<UserControl x:Class="AlienRP.Elements.RememberAutoLoginCheckBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlienRP.Elements"
             xmlns:prop = "clr-namespace:AlienRP.Properties"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <ToggleButton x:Name="rememberMeCheckBox" Content="{x:Static prop:Resources.LoginWindow_RememberMe}" Style="{StaticResource DoubleCheckBoxMainStyle}" FontSize="12" Tag="24" Checked="RememberMeCheckBoxChecked" Unchecked="RememberMeCheckBoxUnchecked" />
        <ToggleButton Visibility="Collapsed" x:Name="autoLoginCheckBox" Content="{x:Static prop:Resources.LoginWindow_AutoLogin}" Style="{StaticResource DoubleCheckBoxMainStyle}" FontSize="12" Tag="24" />
    </StackPanel>
</UserControl>
